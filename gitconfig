   pager = less -FRSX
   signingkey = 5DA19DE4
[push]
	 default = upstream
[help]
   autocorrect = 1
[difftool]
	 prompt = false
[core]
	 excludesfile = /home/jtrindade/.gitignore_global
[commit]
	 gpgsign = true

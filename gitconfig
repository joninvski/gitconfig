[merge]
   tool = vimdiff
[github]
   user = joninvski
[alias]
   lg = log --all --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
   plog = log -p
   slog = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]' --decorate --date=short --numstat
   l = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]' --decrate --date=short
   staged = diff --cached
   st = status -sb
   a = add
   aa= !git add -u && git add . && git status
   cob = checkout -b
   up = !git fetch origin && git rebase origin/master
   ir = !git rebase -i origin/master
   who = shortlog -s --
   merged = branch --merged
   notmerged = branch --no-merged
   delete-merged-branches = "!f() { git checkout --quiet master && git branch --merged | grep --invert-match '\\*' | xargs -n 1 git branch --delete; git checkout --quiet @{-1}; }; f"
   c = commit -s

[color]
   ui = auto
[diff]
	 tool = vimdiff
